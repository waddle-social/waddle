---
import Dashboard from '../components/Dashboard.vue';
import '../tailwind.css';
import { createAuth } from '../lib/auth/better-auth';

// Create auth instance and verify session via Better Auth (handles cookie name/signature)
const auth = await createAuth(Astro.locals.runtime.env.DB, Astro.locals.runtime.env, Astro.request);

let session;
try {
  session = await auth.api.getSession({
    headers: Astro.request.headers,
  });
} catch (error) {
  console.error('Dashboard: Failed to get session:', error);
  return Astro.redirect('/');
}

if (!session) {
  return Astro.redirect('/');
}

// Enhance user data with AT Protocol specific info
const userDid = Astro.cookies.get('atproto_user_did')?.value;
const handle = Astro.cookies.get('atproto_handle')?.value;

const user = {
  ...session.user,
  did: userDid ? decodeURIComponent(userDid) : session.user.id,
  handle: handle ? decodeURIComponent(handle) : session.user.email?.split('@')[0],
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Colony Dashboard - {user.name || user.handle}</title>
  </head>
  <body>
    <Dashboard client:load user={user} />
  </body>
</html>
