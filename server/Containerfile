# syntax=docker/dockerfile:1.7

# ── Cross-compilation builder ───────────────────────────────────────
FROM --platform=$BUILDPLATFORM rust:1-bookworm AS builder

ARG TARGETPLATFORM
ARG BUILDPLATFORM

# Install cross-compilation toolchains
RUN apt-get update && apt-get install -y --no-install-recommends \
    pkg-config libssl-dev ca-certificates \
    gcc-aarch64-linux-gnu libc6-dev-arm64-cross \
    && rm -rf /var/lib/apt/lists/*

# Add Rust targets
RUN rustup target add x86_64-unknown-linux-gnu aarch64-unknown-linux-gnu

# Install cargo-chef for dependency caching
RUN cargo install cargo-chef

WORKDIR /workspace

# ── Plan dependencies ───────────────────────────────────────────────
FROM builder AS planner
COPY Cargo.toml ./
COPY crates ./crates
RUN cargo chef prepare --recipe-path recipe.json

# ── Cook dependencies (cached layer) ───────────────────────────────
FROM builder AS deps

# Set cross-compilation env based on target platform
ARG TARGETPLATFORM
RUN <<EOF
  case "$TARGETPLATFORM" in
    linux/arm64) echo "CARGO_TARGET=aarch64-unknown-linux-gnu" >> /etc/environment \
      && echo 'CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_LINKER=aarch64-linux-gnu-gcc' >> /etc/environment \
      && echo 'PKG_CONFIG_SYSROOT_DIR=/usr/aarch64-linux-gnu' >> /etc/environment ;;
    *) echo "CARGO_TARGET=x86_64-unknown-linux-gnu" >> /etc/environment ;;
  esac
EOF

COPY --from=planner /workspace/recipe.json recipe.json

RUN . /etc/environment && \
    cargo chef cook --release --target "$CARGO_TARGET" --recipe-path recipe.json --package waddle-server

COPY Cargo.toml ./
COPY crates ./crates

RUN . /etc/environment && \
    cargo build --release --target "$CARGO_TARGET" --package waddle-server --bin waddle-server && \
    mkdir -p /out && \
    cp "target/$CARGO_TARGET/release/waddle-server" /out/waddle-server

# ── Runtime ─────────────────────────────────────────────────────────
FROM debian:bookworm-slim AS runtime

RUN apt-get update \
    && apt-get install -y --no-install-recommends ca-certificates libsqlite3-0 \
    && rm -rf /var/lib/apt/lists/* \
    && useradd --system --create-home --home-dir /var/lib/waddle --shell /usr/sbin/nologin waddle

WORKDIR /app

COPY --from=deps /out/waddle-server /usr/local/bin/waddle-server
COPY certs ./certs

EXPOSE 3000 5222 5269

VOLUME ["/var/lib/waddle"]

USER waddle:waddle

ENTRYPOINT ["/usr/local/bin/waddle-server"]
