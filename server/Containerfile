# syntax=docker/dockerfile:1.7

# ── Cross-compilation builder ───────────────────────────────────────
FROM --platform=$BUILDPLATFORM rust:1-bookworm AS builder

# Install cross-compilation toolchain
RUN apt-get update && apt-get install -y --no-install-recommends \
    pkg-config ca-certificates \
    gcc-aarch64-linux-gnu libc6-dev-arm64-cross \
    && rm -rf /var/lib/apt/lists/*

# Add Rust targets
RUN rustup target add x86_64-unknown-linux-gnu aarch64-unknown-linux-gnu

# Install cargo-chef for dependency caching
RUN cargo install cargo-chef

WORKDIR /workspace

# ── Plan dependencies ───────────────────────────────────────────────
FROM builder AS planner
COPY Cargo.toml ./
COPY crates ./crates
RUN cargo chef prepare --recipe-path recipe.json

# ── Cook + build for amd64 ──────────────────────────────────────────
FROM builder AS build-amd64

COPY --from=planner /workspace/recipe.json recipe.json
RUN cargo chef cook --release --target x86_64-unknown-linux-gnu --recipe-path recipe.json --package waddle-server

COPY Cargo.toml ./
COPY crates ./crates
RUN cargo build --release --target x86_64-unknown-linux-gnu --package waddle-server --bin waddle-server \
    && mkdir -p /out && cp target/x86_64-unknown-linux-gnu/release/waddle-server /out/waddle-server

# ── Cook + build for arm64 ──────────────────────────────────────────
FROM builder AS build-arm64
ENV CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_LINKER=aarch64-linux-gnu-gcc
ENV CC_aarch64_unknown_linux_gnu=aarch64-linux-gnu-gcc

COPY --from=planner /workspace/recipe.json recipe.json
RUN cargo chef cook --release --target aarch64-unknown-linux-gnu --recipe-path recipe.json --package waddle-server

COPY Cargo.toml ./
COPY crates ./crates
RUN cargo build --release --target aarch64-unknown-linux-gnu --package waddle-server --bin waddle-server \
    && mkdir -p /out && cp target/aarch64-unknown-linux-gnu/release/waddle-server /out/waddle-server

# ── Select correct binary ──────────────────────────────────────────
FROM build-${TARGETARCH} AS build

# ── Runtime ─────────────────────────────────────────────────────────
FROM debian:bookworm-slim AS runtime

RUN apt-get update \
    && apt-get install -y --no-install-recommends ca-certificates libsqlite3-0 \
    && rm -rf /var/lib/apt/lists/* \
    && useradd --system --create-home --home-dir /var/lib/waddle --shell /usr/sbin/nologin waddle

WORKDIR /app

COPY --from=build /out/waddle-server /usr/local/bin/waddle-server
COPY certs ./certs

EXPOSE 3000 5222 5269

VOLUME ["/var/lib/waddle"]

USER waddle:waddle

ENTRYPOINT ["/usr/local/bin/waddle-server"]
