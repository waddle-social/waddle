{
  "name": "waddle-infra",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "infrastructure"
  ],
  "scripts": {
    "synth": "bun run --filter infrastructure synth",
    "deploy": "bun run --filter infrastructure deploy",
    "destroy": "bun run --filter infrastructure destroy",
    "synth:secure": "./scripts/run-with-secrets.sh bun run synth",
    "deploy:secure": "./scripts/run-with-secrets.sh bun run deploy",
    "destroy:secure": "./scripts/run-with-secrets.sh bun run destroy",
    "synth:teleport": "./scripts/deploy-via-teleport.sh synth",
    "deploy:teleport": "./scripts/deploy-via-teleport.sh deploy",
    "destroy:teleport": "./scripts/deploy-via-teleport.sh destroy"
  }
}
