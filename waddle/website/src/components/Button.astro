---
export interface Props {
	variant?: "primary" | "ghost";
	size?: "sm" | "md" | "lg";
	href?: string;
	type?: "button" | "submit" | "reset";
	class?: string;
	disabled?: boolean;
}

const {
	variant = "primary",
	size = "md",
	href,
	type = "button",
	class: className = "",
	disabled = false,
	...rest
} = Astro.props;

const sizeClasses = {
	sm: "px-3 py-1.5 text-sm",
	md: "px-4 py-2 text-base",
	lg: "px-6 py-3 text-lg",
};

const variantClasses = {
	primary: `
    bg-sky-500 text-white
    hover:bg-sky-600 hover:scale-105 hover:shadow-lg
    focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2
    active:scale-95
    disabled:bg-slate-300 disabled:cursor-not-allowed disabled:hover:scale-100 disabled:hover:shadow-none
    dark:bg-sky-500 dark:hover:bg-sky-600
    dark:disabled:bg-slate-700 dark:focus:ring-offset-slate-900
    transition-all duration-200 ease-out
  `,
	ghost: `
    bg-transparent text-slate-700
    hover:bg-slate-100
    focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2
    active:scale-95
    disabled:text-slate-400 disabled:cursor-not-allowed disabled:hover:bg-transparent
    dark:text-slate-300 dark:hover:bg-slate-800
    dark:disabled:text-slate-600 dark:focus:ring-offset-slate-900
    transition-colors duration-200 ease-out
  `,
};

const buttonClasses = `
  inline-flex items-center justify-center
  font-medium rounded-lg
  ${sizeClasses[size]}
  ${variantClasses[variant]}
  ${className}
`;

const Tag = href ? "a" : "button";
---

<Tag
  class={buttonClasses}
  href={href}
  type={!href ? type : undefined}
  disabled={disabled}
  {...rest}
>
  <slot />
</Tag>
