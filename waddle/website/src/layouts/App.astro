---
import Button from "@/components/Button.astro";
import "@/styles/global.css";

export interface Props {
	title?: string;
	description?: string;
	showHeader?: boolean;
}

const {
	title = "Waddle",
	description = "Welcome to Waddle",
	showHeader = true,
} = Astro.props;

const { user } = Astro.locals;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-slate-50 dark:bg-slate-900 text-slate-900 dark:text-slate-100 antialiased">
    <!-- Main container with max-width and consistent padding -->
    <div class="min-h-screen flex flex-col">
      {showHeader && (
        <header class="sticky top-0 z-50 backdrop-blur-lg bg-slate-50/80 dark:bg-slate-900/80 border-b border-slate-200 dark:border-slate-800">
          <nav class="max-w-7xl mx-auto px-4 sm:px-8 lg:px-24">
            <div class="flex items-center justify-between h-16">
              <!-- Left side: Logo and Menu -->
              <div class="flex items-center gap-8">
                <!-- Mobile menu button -->
                <button
                  id="mobile-menu-toggle"
                  class="lg:hidden p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
                  aria-label="Toggle menu"
                >
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                  </svg>
                </button>

                <!-- Logo/Brand -->
                <a href="/" class="font-bold text-xl tracking-tighter">
                  <span class="bg-gradient-to-br from-slate-800 to-slate-600 dark:from-slate-100 dark:to-slate-300 bg-clip-text text-transparent">
                    Waddle
                  </span>
                  <span class="bg-gradient-to-br from-sky-600 to-cyan-600 dark:from-sky-400 dark:to-cyan-400 bg-clip-text text-transparent">
                    Social
                  </span>
                </a>

                <!-- Desktop navigation items -->
                <nav class="hidden lg:flex items-center gap-6">
                  <!-- Future nav items can go here -->
                </nav>
              </div>

              <!-- Right side: Auth section -->
              <div class="flex items-center gap-4">
                {user ? (
                  <!-- User dropdown -->
                  <div class="relative" id="user-dropdown">
                    <button
                      id="user-menu-toggle"
                      class="flex items-center gap-3 p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
                      aria-label="User menu"
                    >
                      <!-- Avatar -->
                      <div class="w-8 h-8 rounded-full bg-gradient-to-br from-sky-400 to-cyan-500 flex items-center justify-center text-white font-medium text-sm">
                        U
                      </div>
                      <!-- User name (hidden on mobile) -->
                      <span class="hidden sm:block text-sm font-medium text-slate-700 dark:text-slate-300 max-w-[150px] truncate">
                        {user.firstName} {user.lastName}
                      </span>
                      <!-- Dropdown arrow -->
                      <svg class="w-4 h-4 text-slate-500 dark:text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                      </svg>
                    </button>

                    <!-- Dropdown menu -->
                    <div
                      id="user-menu"
                      class="absolute right-0 mt-2 w-64 bg-white dark:bg-slate-800 rounded-lg shadow-lg border border-slate-200 dark:border-slate-700 py-2 hidden animate-in fade-in slide-in-from-top-2 duration-200"
                    >
                      <!-- User info -->
                      <div class="px-4 py-3 border-b border-slate-200 dark:border-slate-700">
                        <p class="text-sm font-medium text-slate-900 dark:text-slate-100 truncate">
                          {user.firstName} {user.lastName}
                        </p>
                        {user?.email && (
                          <p class="text-xs text-slate-500 dark:text-slate-400 truncate mt-0.5">
                            {user.email}
                          </p>
                        )}
                      </div>

                      <!-- Menu items -->
                      <div class="py-2">
                        <a
                          href="/chat"
                          class="flex items-center gap-3 px-4 py-2 text-sm text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                          </svg>
                          Chat
                        </a>
                      </div>

                      <!-- Logout -->
                      <div class="border-t border-slate-200 dark:border-slate-700 pt-2">
                        <a
                          href="/api/auth/logout"
                          class="flex items-center gap-3 px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                          </svg>
                          Sign out
                        </a>
                      </div>
                    </div>
                  </div>
                ) : (
                  <!-- Login button -->
                  <Button href="/api/auth/login" size="sm">
                    Sign in
                  </Button>
                )}
              </div>
            </div>

            <!-- Mobile navigation menu -->
            <div
              id="mobile-menu"
              class="lg:hidden hidden border-t border-slate-200 dark:border-slate-700 py-4 animate-in slide-in-from-top-2 duration-200"
            >
              <nav class="flex flex-col gap-2">
                <!-- Future mobile nav items can go here -->
                {user && (
                  <a
                    href="/chat"
                    class="flex items-center gap-3 px-4 py-2 text-sm text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg transition-colors"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                    Chat
                  </a>
                )}
              </nav>
            </div>
          </nav>
        </header>
      )}

      <!-- Main content area -->
      <main class="flex-1">
        <div class="max-w-7xl mx-auto px-8 sm:px-16 lg:px-24 py-8 sm:py-16 lg:py-24">
          <slot />
        </div>
      </main>
    </div>

    <!-- Script for dropdown and mobile menu functionality -->
    <script>
      // User dropdown toggle
      const userMenuToggle = document.getElementById('user-menu-toggle');
      const userMenu = document.getElementById('user-menu');
      const userDropdown = document.getElementById('user-dropdown');

      if (userMenuToggle && userMenu) {
        // Toggle dropdown on click
        userMenuToggle.addEventListener('click', (e) => {
          e.stopPropagation();
          userMenu.classList.toggle('hidden');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
          if (userDropdown && !userDropdown.contains(e.target as Node)) {
            userMenu.classList.add('hidden');
          }
        });

        // Close dropdown on escape key
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape') {
            userMenu.classList.add('hidden');
          }
        });
      }

      // Mobile menu toggle
      const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');

      if (mobileMenuToggle && mobileMenu) {
        mobileMenuToggle.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      }
    </script>
  </body>
</html>
